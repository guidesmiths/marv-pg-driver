{
  "extends": ["eslint-config-airbnb-base", "prettier"],
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "2017"
  },
  "rules": {
    "consistent-return": 0,
    "no-shadow": ["error", { "allow": ["cb", "err", "result"] }],
    "vars-on-top": 0,
    "no-use-before-define": 0,
    "global-require": 0
  }
}
